<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.rc.mapper.RsmPatrolListMapper">
    <!-- 查询巡查列表带分页 -->
    <select id="getPatrolList" resultType="com.rc.domain.entity.RsmPatrolList">
        SELECT *
        FROM rsm_patrol_list
        <where>
            <if test="startTime != null and endTime != null">
                AND update_time BETWEEN #{startTime} AND #{endTime}
            </if>
            <if test="startTime != null and endTime == null">
                AND update_time &gt;= #{startTime}
            </if>
            <if test="endTime != null and startTime == null">
                AND update_time &lt;= #{endTime}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
    </select>
</mapper>
