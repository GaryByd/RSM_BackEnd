<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rc.mapper.RsmSnapshotMapper">
    <update id="handelSnapshot">
        update rsm_snapshot
        <set>
            <if test="handlerImgPath != null">
                handler_img_path = #{handlerImgPath},
            </if>
            <if test="property != null">
                property = #{property},
            </if>
            <if test="approvalReply != null">
                approval_reply = #{approvalReply},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="handlerId != null">
                handler_id = #{handlerId},
            </if>
            <if test="handlerTime != null">
                handler_time = #{handlerTime},
            </if>
        </set>
        where id = #{id}
    </update>
    <select id="getSnapShotList" resultType="com.rc.domain.entity.RsmSnapshot">
        select * from rsm_snapshot
        <where>
            <if test="property != null">
                AND property = #{property}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
    </select>
</mapper>
